{% extends 'base-backend.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}
    <div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Video index</h1>
    <a href="{{ path('app_admin_video_new') }}" class="btn btn-success"><i class="aligne-middle" data-feather="plus"></i></a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>ImageName</th>
                <th>Slug</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.nom }}</td>
                <td>{{ video.description|raw }}</td>
                <td>{{ video.imageName }}</td>
                <td>{{ video.slug }}</td>
                <td>{{ video.updatedAt ? video.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_video_show', {'id': video.id}) }}">show</a>
                    <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
