{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<h1>Catégories</h1>
{# On affiche tous les category avec une boucle #}
<div class="row">
    {% for category in categories %}
    <div class="col-12 col-md-3 col-xl-2">
        <div class="card">
            <p>{{ category.name }}</p>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
