{% extends 'base.html.twig' %}
{% block title %}{{ video.title }}{% endblock %}

{% block body %}
<h1>{{ video.title }}</h1>
<div class="row">
	<div class="col-12 col-md-3">
		{% if video.VideoSlug is defined and video.VideoSlug is not null %}
			<video controls>
				<source src="{{ asset('images/videos/' ~ video.VideoSlug) }}" type="video/mp4">
			</video>
		{% else %}
			<video controls>
				<source src="maVideo.mp4" type="video/mp4">
			</video>
		{% endif %}
	</div>
	<div class="col-12 col-md-9">
		<h2>Description :</h2>
		<p>{{ video.description }}</p>
	</div>
</div>
{% endblock %}

